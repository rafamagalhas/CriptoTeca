<hr />
<div class="row crypt-form">
  <form accept-charset="UTF-8" action="/<%= algorithm %>/encrypt/" id="<%= algorithm %>_encryption" method="post" class="six columns">
    <label for="<%= algorithm %>_encryption_message">Mensagem a ser criptografada</label>
    <input type="text" value="<%= value_for(@algorithm, algorithm, @message) %>" id="<%= algorithm %>_encryption_message" name="<%= algorithm %>_encryption[message]" />
    <input type="submit" value="Criptografar mensagem" class="button radius" />
    <span class="clear-form <%= algorithm %> button secondary radius">Limpar</span>
  </form>

  <form class="six columns">
    <label for="<%= algorithm %>_encrypted_message">Mensagem criptografada</label>
    <textarea id="<%= algorithm %>_encrypted_message" rows="3"><%= value_for(@algorithm, algorithm, @encrypted_message) %></textarea>
  </form>
</div>